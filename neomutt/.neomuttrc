


# Configure Internet Message Access Protocol for reading mail
# Username and password for your Gmail or G Suite account
set from = 'ochoaje@gmail.com'
set realname = 'J'
set imap_user = 'ochoaje@gmail.com'
set imap_pass = ''

# # Specifies the default location of your mailboxes
set folder = 'imaps://imap.gmail.com:993'

# # Configure Simple Mail Transfer Protocol for sending mail
set smtp_url = 'smtp://ochoaje@gmail.com@smtp.gmail.com:587/'
set smtp_pass = ''
set smtp_authenticators = 'plain'
set ssl_force_tls = yes

# # Location of inbox
set spoolfile = '+INBOX'

# # Location of drafts
set postponed = '+[GMail]/Drafts'

## Location of trash
set trash = '+[Google Mail]/Trash'

# # Activate caching, as it can greatly improve speed
set header_cache =~/.mutt/cache/headers
set message_cachedir =~/.mutt/cache/bodies
set certificate_file =~/.mutt/certificates

# # Securing
set move = no
set imap_keepalive = 900

# # Disable saving outgoing mail since Gmail saves them by default.
set record = ''

# General Settings:
set editor = vim
set sort = 'reverse-date'
set date_format = '%m/%d %I : %M'
