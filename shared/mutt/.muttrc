# Open links in email
    macro index,pager \cb ": unset wait_key; set pipe_decode\n|w3m\n: set wait_key; unset pipe_decode\n" "call w3m to extract URLs out of a message"

# Open Unitek folder
    macro index \Cu  "<change-folder> =Unitek<enter>"  "go to Unitek Items"
# Open Unitek folder
    macro index \Ci  "<change-folder> =INBOX<enter>"  "go to Inbox Items"



