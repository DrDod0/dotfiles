# specific programs based on extension
    alias -s mp3=cmus
    alias -s md=vim
    alias -s txt=vim


# tmux alias
    alias tl='tmux ls'
    alias td='tmux detach'
    alias ta='tmux attach'
    alias tk='tmux kill-server'
    alias tu='tmux'
    alias source.tmux='tmux source-file $HOME/.tmux.conf'

# bash/zsh
    alias ls='ls -a -G'
    alias q='exit'
    alias ra='ranger'
    alias ran='ranger'
    alias c='clear'
    alias source.bash='source $HOME/.bashrc'

# locations
    alias notes='cd ~/notes/'
    alias note='cd ~/notes/'
    alias code='cd ~/notes/code/'
    alias dot='cd ~/dotfiles'
    alias node='cd ~/node.setup/'
    alias f1='cd ~/notes/F1/'
    alias journal='cd ~/notes/mental_health/journal/'

# dropbox
    alias dropbox.status='~/dropbox.py status'

# w3m
    alias net='w3m'

# Scripts
    # git
    alias pub='sh ~/notes/code/project.git/git.sh'
    alias gs='git status'
    alias gc='git commit -m'
    alias gp='git push'
    alias ga='git add'


    # progress
    alias pro='py ~/notes/code/project.todo/progress.py'

# vim
    alias vim='nvim'
    alias vi='nvim'

    alias vimrc='vim ~/dotfiles/vim/.vimrc'
    alias source.vimrc='source $HOME/.vimrc'

# python
    alias py='python3'
    alias python='python3'

# pip
    alias pip='pip3'


# RRS & Readers
    alias news='newsboat'

# aria2: CLI Torrent
    alias torrent='aria2c'

# sqlite3
    alias sq='sqlite3'

# system
    alias shutdown='shutdown -now'
    alias update.me='sudo apt-get update && sudo apt-get dist-upgrade -y && apt autoremove -y'
    alias time='dpkg-reconfigure tzdata'

