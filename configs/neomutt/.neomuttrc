################
## Index settings

# Confirm quit
set quit

# Confim the recipient and the subject when reply
set fast_reply = yes
set include = yes

# Make mutt faster
set sleep_time = 0


set sort = threads
#
## Remember to `mkdir -p ~/.neomutt/hcache` first:
#set header_cache= "~/.neomutt/hcache"
#
